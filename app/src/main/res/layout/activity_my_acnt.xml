<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyAcctActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#D3D3D3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/circleImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_account_circle_black_24dp"
                android:layout_centerHorizontal="true"

                app:civ_border_color="#3f51b5"
                app:civ_border_width="4dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="10dp"
                app:civ_shadow_color="#3f51b5"/>

            <TextView
                android:id="@+id/NameView"
                android:layout_below="@id/circleImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textSize="25sp"
                android:textColor="@color/colorWhite"
                 />

            <TextView
                android:id="@+id/PhoneView"
                android:text="-"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/NameView"
                android:textAlignment="center"
                android:layout_marginTop="22dp"
                android:textSize="15sp"
                android:textColor="#fff"
                 />

            <TextView
                android:id="@+id/EmailView"
                android:text="-"
                android:layout_below="@id/PhoneView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="15sp"
                 />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_below="@id/EmailView"
                android:layout_alignParentEnd="true"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/edit"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="15dp"
            android:background="#fff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Orders"
                android:textColor="#000"
                android:textSize="15sp"/>

            <TableRow
                android:id="@+id/row1"
                android:background="#D3D3D3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/buttonLogin"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VIEW ALL ORDERS"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:textAlignment="textEnd"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="15dp"
            android:background="#fff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Cards"
                android:textColor="#000"
                android:textSize="15sp"/>

            <TableRow
                android:id="@+id/row2"
                android:background="#D3D3D3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/buttonLogin"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VIEW DETAILS"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:textAlignment="textEnd"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="15dp"
            android:background="#fff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Reviews"
                android:textColor="#000"
                android:textSize="15sp"/>

            <TableRow
                android:id="@+id/row3"
                android:background="#D3D3D3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/buttonLogin"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VIEW YOUR REVIEWS"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:textAlignment="textEnd"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="15dp"
            android:background="#fff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/my_questions_answers"
                android:textColor="#000"
                android:textSize="15sp"/>

            <TableRow
                android:id="@+id/row4"
                android:background="#D3D3D3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/buttonLogin"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/view_your_q_a"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:textAlignment="textEnd"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:padding="15dp"
            android:background="#fff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Addresses"
                android:textColor="#000"
                android:textSize="15sp"/>

            <TableRow
                android:id="@+id/row5"
                android:background="#D3D3D3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VIEW MORE"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:textAlignment="textEnd"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Account Settings"
            android:drawableStart="@drawable/ic_settings_black_24dp"
            android:drawablePadding="5dp"
            android:textColor="#000"
            android:background="#fff"
            android:textSize="17sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Notification Preference"
            android:drawableStart="@drawable/ic_notifications_paused_black_24dp"
            android:drawablePadding="5dp"
            android:textColor="#000"
            android:background="#fff"
            android:textSize="17sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Language Settings"
            android:drawableStart="@drawable/ic_translate_black_24dp"
            android:drawablePadding="5dp"
            android:textColor="#000"
            android:background="#fff"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/logout_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Log Out"
            android:drawableStart="@drawable/logout"
            android:drawablePadding="5dp"
            android:textColor="#000"
            android:background="#fff"
            android:textSize="17sp"/>


    </LinearLayout>

</ScrollView>